<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toDosLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toDosToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/ToDoListToolbar"
            app:title="ToDo:"
            app:titleTextColor="@color/color_white"/>

    <ImageButton
            android:id="@+id/btnAddItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white_30"
            style="@style/ToDoListToolbar"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/toDosToolbar"
            app:layout_constraintEnd_toEndOf="@id/toDosToolbar"
            app:layout_constraintBottom_toBottomOf="@id/toDosToolbar"
            tools:ignore="ContentDescription"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/toDosRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/toDosToolbar"
            app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>