<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="todo"
                  type="com.example.ants_todo.data.models.ToDoModel"/>
        <variable name="listener"
                  type="com.example.ants_todo.presentation.toDo.adapter.ToDoClickListener"/>
    </data>

    <androidx.cardview.widget.CardView
            android:elevation="2dp"
            android:layout_marginBottom="2dp"
            android:background="@{(todo.checked == true) ? @color/color_grey_400 : @color/color_white}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutToDo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/todoName"
                    tools:text="name"
                    android:text="@{todo.name}"
                    android:alpha="@{(todo.checked == true) ? 0.7f : 1f}"
                    android:textColor="@{(todo.checked == true) ? @color/color_grey_700 : @color/color_black}"
                    style="@style/ToDosStyle"
                    android:onClick="@{() -> listener.onClick(todo.id)}"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="2dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>